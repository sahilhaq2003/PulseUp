<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorCardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Top Row: Title and Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/habitTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit Title"
                android:textSize="18sp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end" />

            <CheckBox
                android:id="@+id/habitCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorSuccess"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Progress Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/habitProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/1"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/habitProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="@color/colorSuccess"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/habitEditBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_edit"
                    android:background="@drawable/button_outline_background"
                    android:padding="8dp"
                    android:contentDescription="@string/edit" />

                <ImageView
                    android:id="@+id/habitDeleteBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_delete"
                    android:background="@drawable/button_outline_background"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/delete" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/habitProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="0"
            android:progressTint="@color/colorSuccess"
            android:backgroundTint="@color/colorPrimaryLight"
            android:layout_marginBottom="8dp" />

        <!-- Streak Indicator -->
        <TextView
            android:id="@+id/habitStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 3 day streak"
            android:textSize="12sp"
            android:textColor="@color/colorWarning"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/streak_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
