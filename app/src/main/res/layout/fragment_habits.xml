<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/habits_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".fragments.HabitsFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_bg"
            android:contentDescription="@string/back"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="All Habits"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Add Habit Button -->
        <ImageView
            android:id="@+id/addHabitBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_input_add"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Habit"
            app:tint="@android:color/black" />
    </LinearLayout>

    <!-- Habits Container -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:id="@+id/habitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navBackground"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="@dimen/spacing_sm">

            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:background="@drawable/nav_item_background"
                android:clickable="true"
                android:contentDescription="Home"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_sm">

                <ImageView
                    android:id="@+id/imageViewHome"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    app:srcCompat="@drawable/ic_home_simple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/navText"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navHabits"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:background="@drawable/nav_item_background"
                android:clickable="true"
                android:contentDescription="Habits"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_sm">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    app:srcCompat="@drawable/ic_habits_simple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habits"
                    android:textColor="@color/navText"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navMood"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:background="@drawable/nav_item_background"
                android:clickable="true"
                android:contentDescription="Mood"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_sm">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    app:srcCompat="@drawable/baseline_mood_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood"
                    android:textColor="@color/navText"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacing_xs"
                android:background="@drawable/nav_item_background"
                android:clickable="true"
                android:contentDescription="Profile"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_sm">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    app:srcCompat="@drawable/baseline_person_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/navText"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
