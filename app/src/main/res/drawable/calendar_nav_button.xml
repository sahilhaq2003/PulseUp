<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowMedium" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
            <!-- Orange background -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowLight" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            
            <!-- Clean background -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shade100" />
                    <corners android:radius="15dp" />
                    <stroke android:width="2dp" android:color="@color/colorPrimary" />
                </shape>
            </item>
            
            <!-- Inner highlight -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryLight" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
