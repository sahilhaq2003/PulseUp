<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Professional shadow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/shadowLight" />
        </shape>
    </item>
    
    <!-- Green mood circle -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/moodHappyBg" />
            <stroke android:width="1dp" android:color="@color/moodHappy" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/moodHappyBg" />
            <stroke android:width="1dp" android:color="@color/moodHappy" />
        </shape>
    </item>
</layer-list>
