<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Professional shadow -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowLight" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Clean white card background -->
    <item android:top="0dp" android:left="0dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shade100" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/shade300" />
        </shape>
    </item>
    
    <!-- Subtle inner border -->
    <item android:top="1dp" android:left="1dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <stroke android:width="1dp" android:color="@color/shade200" />
        </shape>
    </item>
</layer-list>
