<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Professional shadow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowMedium" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Clean white background -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/colorPrimary" />
        </shape>
    </item>
    
    <!-- Subtle inner highlight -->
    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@color/colorPrimaryLight" />
        </shape>
    </item>
</layer-list>

