<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Professional shadow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowMedium" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Clean white background -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shade100" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/colorBorder" />
        </shape>
    </item>
    
    <!-- Subtle orange accent border -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@color/colorPrimary" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp" />
            <stroke android:width="1dp" android:color="@color/shade200" />
        </shape>
    </item>
</layer-list>
