<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle shadow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowLight" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Clean white card background -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/colorBorder" />
        </shape>
    </item>
</layer-list>
