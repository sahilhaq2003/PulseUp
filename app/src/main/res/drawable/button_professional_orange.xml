<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorOnPrimary">
    <item>
        <layer-list>
            <!-- Professional shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowMedium" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Orange button surface -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/colorPrimary"
                        android:endColor="@color/colorAccent"
                        android:angle="135" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>

