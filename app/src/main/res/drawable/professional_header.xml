<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Professional shadow -->
    <item android:top="2dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowLight" />
        </shape>
    </item>
    
    <!-- White header background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shade100" />
        </shape>
    </item>
    
    <!-- Subtle bottom border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/shade200"
                android:endColor="@android:color/transparent"
                android:angle="270" />
        </shape>
    </item>
</layer-list>
