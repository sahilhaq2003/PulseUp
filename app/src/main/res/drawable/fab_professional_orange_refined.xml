<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorOnPrimary">
    <item>
        <layer-list>
            <!-- Professional shadow -->
            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/shadowMedium" />
                </shape>
            </item>
            
            <!-- Orange gradient button -->
            <item android:top="0dp" android:left="0dp" android:right="8dp" android:bottom="8dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/colorPrimary"
                        android:endColor="@color/colorAccent"
                        android:type="radial"
                        android:gradientRadius="90dp" />
                </shape>
            </item>
            
            <!-- Subtle highlight -->
            <item android:top="12dp" android:left="12dp" android:right="32dp" android:bottom="32dp">
                <shape android:shape="oval">
                    <solid android:color="#20FFFFFF" />
                </shape>
            </item>
            
            <!-- Inner highlight -->
            <item android:top="16dp" android:left="16dp" android:right="28dp" android:bottom="28dp">
                <shape android:shape="oval">
                    <solid android:color="#10FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>

