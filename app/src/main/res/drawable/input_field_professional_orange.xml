<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state with orange border and subtle shadow -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowLight" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- White background with orange border -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shade100" />
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state with clean design -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowLight" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- White background with gray border -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shade100" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="@color/shade400" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
