<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Pressed state -->
    <item android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowMedium" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            
            <!-- Green background with orange border -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/moodHappyBg" />
                    <corners android:radius="20dp" />
                    <stroke android:width="2dp" android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowLight" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            
            <!-- Clean background -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shade100" />
                    <corners android:radius="18dp" />
                    <stroke android:width="1dp" android:color="@color/shade300" />
                </shape>
            </item>
            
            <!-- Subtle green tint -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/moodHappyBg" />
                    <corners android:radius="17dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

