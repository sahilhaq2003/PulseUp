<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state with subtle effect -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Enhanced shadow for pressed state -->
            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowMedium" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            
            <!-- Slightly darker orange for pressed -->
            <item android:top="0dp" android:left="0dp" android:right="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            
            <!-- Subtle inner highlight -->
            <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="9dp" />
                    <stroke android:width="1dp" android:color="@color/colorPrimaryLight" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Professional shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowLight" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            
            <!-- Clean orange background -->
            <item android:top="0dp" android:left="0dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            
            <!-- Subtle inner highlight -->
            <item android:top="1dp" android:left="1dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="7dp" />
                    <stroke android:width="1dp" android:color="@color/shade200" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>