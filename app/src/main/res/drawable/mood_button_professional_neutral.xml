<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Pressed state -->
    <item android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <!-- Enhanced shadow -->
            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowMedium" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            
            <!-- Professional orange accent -->
            <item android:top="0dp" android:left="0dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            
            <!-- Clean white inner area -->
            <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shade100" />
                    <corners android:radius="22dp" />
                    <stroke android:width="2dp" android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Professional shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowLight" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            
            <!-- Clean background -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/moodNeutralBg" />
                    <corners android:radius="20dp" />
                    <stroke android:width="1dp" android:color="@color/moodNeutral" />
                </shape>
            </item>
            
            <!-- Inner professional highlight -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="19dp" />
                    <stroke android:width="1dp" android:color="@color/shade200" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

